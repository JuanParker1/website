<!doctype html>
<html lang="en">

<head>
  {{>head}}
</head>

<body>
  {{>header}}
  {{>nav}}

  <div class="container">
    <div class="row">

      <main class="col-xl-9 mb-5">
        {{#each data.news}}


          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title border-info border-bottom">{{title}}</h5>
              <p class="card-text">{{{text}}}</p>
              <p class="card-text"><small class="text-muted">{{date}}</small></p>
            </div>
          </div>


        {{/each}}
      </main>

      <aside class="d-none d-xl-block col-xl-3">
      {{>aside}}
      </aside>
    </div>
  </div>

  {{>footer}}
  {{>debug}}
  {{>foot}}
</body>

</html>
