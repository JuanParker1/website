<div class="card shadow mb-5">
  <a href="{{id}}.html" class="text-reset text-decoration-none"><img src="{{cover}}" class="card-img-top" alt="{{title}} Illustration"></a>
  <div class="card-body">
    <h5 class="card-title"><a href="{{id}}.html" class="text-reset text-decoration-none">{{title}}</a></h5>
    <h6 class="card-subtitle mb-2 text-muted"><a href="{{id}}.html" class="text-reset text-decoration-none">{{subtitle}}</a></h6>
    <a href="{{id}}.html" class="btn btn-outline-primary mb-2">{{title}} Home</a>
    <a href="{{audio}}" class="btn btn-outline-primary mb-2">Listen to Audio Book</a>
  </div>
  <div class="card-footer text-muted small">
    Updated {{#first recent}}{{timestamp}}{{/first}}
  </div>
</div>
