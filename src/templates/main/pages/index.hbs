<!doctype html>
<html lang="en">

<head>
  {{>head}}
</head>

<body>
  {{>header}}
  {{>nav}}

  <div class="container">

    <div class="row">
      <div class="col mb-4">


          <div class="row">
            {{#each data.books }}
            {{#each (slice 0 4 latest)}}
              <div class="col-12 col-md-6 col-xl-3 mb-5">
                {{>cardPoem}}
              </div>
            {{/each}}
            {{/each}}
          </div>


      </div>
    </div>

    <div class="row">

      <main class="col-xl-9 mb-5">
        {{#each data.books}}
            <div class="row row-cols-1 row-cols-md-2">

              {{#each (slice 4 17 latest)}}
                <div class="col mb-4">
                  {{>cardPoem}}
                </div>
              {{/each}}



              <div class="col mb-4">

                {{>cardBook}}
              </div>


            </div>



        {{/each}}

                {{>more}}
      </main>
      <aside class="d-none d-xl-block col-xl-3">
        {{>more}}
        {{>aside}}
      </aside>
    </div>
  </div>

  {{>footer}}
  {{>debug}}
  {{>foot}}
</body>

</html>
